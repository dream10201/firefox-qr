{
	"manifest_version": 2,
	"name": "QR Code Full",
	"version": "1.1",
	"description": "Adds a button to the address bar to get the current url as a QR Code Full",
	"default_locale": "en",
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"options_ui": {
		"page": "options.html"
	},
	"icons": {
		"48": "icon.svg",
		"16": "icon.svg",
		"32": "icon.svg",
		"64": "icon.svg",
		"128": "icon.svg",
		"96": "icon.svg"
	},
	"permissions": [
		"activeTab",
		"contextMenus",
		"storage",
		"tabs",
		"<all_urls>"
	],
	"page_action": {
		"show_matches": [
			"<all_urls>"
		],
		"browser_style": true,
		"default_icon": "icon.svg",
		"default_title": "QR Code Full",
		"default_popup": "popup.html"
	}
}