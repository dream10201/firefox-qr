{
	"manifest_version": 2,
	"name": "QR Code",
	"version": "1.3",
	"description": "Adds a button to the address bar to get the current url as a qr code",
	"default_locale": "en",
	"background": {
	  "scripts": [
		"background.js"
	  ]
	},
	"options_ui": {
	  "page": "options.html"
	},
	"icons": {
		"48": "icon.svg",
		"16": "icons/16.png",
		"32": "icons/32.png",
		"64": "icons/64.png",
		"128": "icons/128.png",
		"96": "icon.svg"
	},
	"permissions": [
		"activeTab",
		"contextMenus",
		"storage",
		"tabs",
		"<all_urls>"
	],
	"page_action": {
		"show_matches": [
			"<all_urls>"
		],
		"browser_style": true,
		"default_icon": "icon.svg",
		"default_title": "QR Code",
		"default_popup": "popup.html"
	}
}